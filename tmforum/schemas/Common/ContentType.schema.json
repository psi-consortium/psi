{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ContentType.schema.json",
  "title": "ContentType",
  "definitions": {
    "ContentType": {
      "$id": "#ContentType",
      "type": "object",
      "description": "Base64 content structure.",
      "properties": {
        "type": {
          "type": "string",
          "description": "Content type."
        },
        "contentEncoding": {
          "type": "string",
          "format": "byte",
          "description": "Base64 encoded content."
        },
        "description": {
          "type": "string",
          "description": "Content description."
        }
      },
      "required": [
        "contentEncoding"
      ]
    }
  }
}
