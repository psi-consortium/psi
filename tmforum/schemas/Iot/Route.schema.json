{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://fiware.github.io/dataModels/specs/UrbanMobility/Route/schema.json",
  "title": "NGSI GTFS Schema - Route",
  "description": "GTFS Route",
  "type": "object",
  "allOf": [
   {"$ref": "https://github.com/tmforum-rand/schemas/blob/master/Common/Entity.schema.json#/definitions/Entity"},
    { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons" },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "gtfs:Route"
          ],
          "description": "NGSI Entity type"
        },
        "name": {
          "type": "string"
        },
        "page": {
          "type": "string"
        },
        "routeColor": {
          "type": "string"
        },
        "routeTextColor": {
          "type": "string"
        },
        "routeType": {
          "type": "string",
          "enum": [
            "0", "1", "2", "3",
            "4", "5", "6", "7"
          ]
        },
        "routeSortOrder": {
          "type": "integer",
          "minimum": 0
        },
        "operatedBy": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  ],
  "required": [
    "id",
    "type",
    "shortName",
    "name",
    "routeType",
    "operatedBy"
  ]
}
